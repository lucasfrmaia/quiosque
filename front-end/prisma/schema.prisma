// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  role     String
  password String

  @@map("users")
}

model Produto {
  id          Int         @id @default(autoincrement())
  nome        String
  preco       Float
  descricao   String?

  notaFiscals NotaFiscal[]
  estoque Estoque[]
  cardapio Cardaptio[]

  @@map("produtos")
}

model Estoque {
  id            Int      @id @default(autoincrement())
  nome          String
  quantidade    Int
  precoUnitario Float
  categoria     String
  dataValidade  String

  produtoId     Int
  produto   Produto @relation(fields: [produtoId], references: [id], onDelete: Cascade)

  @@map("estoques")
}

model Cardaptio {
  id            Int      @id @default(autoincrement())
  produtoId     Int
  produto   Produto @relation(fields: [produtoId], references: [id], onDelete: Cascade)

  @@map("cardapio")
}


model NotaFiscal {
  id        Int      @id @default(autoincrement())
  produtoId Int
  quantidade Int
  data      DateTime
  total     Float

  produto   Produto @relation(fields: [produtoId], references: [id], onDelete: Cascade)

  @@map("nota_fiscals")
}
